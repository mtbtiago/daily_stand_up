<h2><%= @response.user.name %></h2>
<p>
  Your responses for <%= @response.team.name %> at <%= @response.day.today %>
</p>

<p id="notice"><%= notice %></p>

<dl class="dl-horizontal">
  <dt><%= @response.team.question_a %>:</dt>
  <dd><%= @response.response_a %></dd>
  <dt><%= @response.team.question_b %>:</dt>
  <dd><%= @response.response_b %></dd>
  <dt><%= @response.team.question_c %>:</dt>
  <dd><%= @response.response_c %></dd>
</dl>

<%= link_to 'Edit', edit_response_path(@response, slug: @response.slug) %>
